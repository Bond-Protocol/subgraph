{
  "name": "bond-protocol",
  "license": "UNLICENSED",
  "scripts": {
    "codegen": "graph codegen",
    "build-mainnet": "graph build --network mainnet",
    "build-goerli": "graph build --network goerli",
    "build-arbitrum": "graph build --network arbitrum-one",
    "build-arbitrum-goerli": "graph build --network arbitrum-goerli",
    "build-optimism-goerli": "graph build --network optimism-goerli",
    "build-polygon-mumbai": "graph build --network mumbai",
    "deploy-studio": "yarn build-goerli && graph deploy --node https://api.studio.thegraph.com/deploy/ bond-protocol",
    "deploy-mainnet": "yarn build-mainnet && graph deploy --product hosted-service bond-protocol/bond-protocol-mainnet",
    "deploy-mainnet-testing": "yarn build-mainnet && graph deploy --product hosted-service spaceturtleship/bp-ethereum-testing",
    "deploy-goerli": "yarn build-goerli && graph deploy --product hosted-service bond-protocol/bond-protocol-goerli",
    "deploy-arbitrum": "yarn build-arbitrum && graph deploy --product hosted-service bond-protocol/bond-protocol-arbitrum-mainnet",
    "deploy-arbitrum-testing": "yarn build-arbitrum && graph deploy --product hosted-service spaceturtleship/bp-arbitrum-testing",
    "deploy-arbitrum-goerli": "yarn build-arbitrum-goerli && graph deploy --product hosted-service bond-protocol/bond-protocol-arbitrum-goerli",
    "deploy-optimism-goerli": "yarn build-optimism-goerli && graph deploy --product hosted-service bond-protocol/bond-protocol-optimism-goerli",
    "deploy-polygon-mumbai": "yarn build-polygon-mumbai && graph deploy --product hosted-service bond-protocol/bond-protocol-polygon-mumbai",
    "deploy-hosted-mainnet": "yarn deploy-mainnet",
    "deploy-hosted-goerli": "yarn deploy-goerli",
    "create-local": "graph create --node http://localhost:8020/ bond-protocol",
    "remove-local": "graph remove --node http://localhost:8020/ bond-protocol",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 bond-protocol"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.30.0",
    "@graphprotocol/graph-ts": "0.27.0"
  }
}
